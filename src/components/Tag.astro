---
/*
Usage of colors:
"red",
"orange",
"amber",
"yellow",
"lime",
"green",
"emerald",
"teal",
"cyan",
"sky",
"blue",
"indigo",
"violet",
"purple",
"fuchsia",
"pink",
"rose",
"slate",
"gray",
"zinc",
"neutral",
"stone",
"sand",
"olive",
"mauve",
*/

const bgs = {
	Web: 'text-white bg-red-600',
	Astro: 'text-white bg-purple-600',
	Tailwind: 'text-white bg-blue-600',
	React: 'text-white bg-violet-600',
	'React Native': 'text-white bg-stone-500 shadow-inset-border shadow-violet-600',
	Svelte: 'text-white bg-orange-600',
	Shopify: 'text-white bg-stone-500 shadow-inset-border shadow-teal-600',
	SvelteKit: 'text-white bg-stone-500 shadow-inset-border shadow-orange-600',
	Mobile: 'text-white bg-stone-500 shadow-inset-border shadow-pink-600',
	Design: 'text-white bg-stone-500 shadow-inset-border shadow-fuchsia-600',
	default: 'text-white bg-stone-500 shadow-inset-border shadow-mauve-600',
};

const text = (await Astro.slots.render('default')) as keyof typeof bgs;

const bg = bgs[text] || bgs.default;
---

<div class=`px-1.5 text-2xl ${bg}`>
	<slot />
</div>
